<Window x:Class="ToastTunnel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ToastyTunnel - SSH Bridge" Height="219.648" Width="466.496" ResizeMode="CanMinimize" WindowStartupLocation="CenterScreen">
    <Grid>
        <CheckBox x:Name="chkTunnel" Content="Tunnel" HorizontalAlignment="Left" Margin="19,76,0,0" IsChecked="True" VerticalAlignment="Top" Click="chkTunnel_Click"/>
        <TextBox x:Name="txtTunnelPort" HorizontalAlignment="Left" Height="23" Margin="134,73,0,0" TextWrapping="Wrap" Text="12344" IsEnabled="{Binding IsChecked, ElementName=chkTunnel}" VerticalAlignment="Top" Width="65" TextChanged="txtTunnelPort_TextChanged"/>
        <Label Content="Port:" HorizontalAlignment="Left" Margin="94,70,0,0" VerticalAlignment="Top"/>
        <Label Content="Host:" HorizontalAlignment="Left" Margin="162,11,0,0" VerticalAlignment="Top"/>
        <ComboBox Name="cmbHosts" HorizontalAlignment="Left" Margin="204,14,0,0" VerticalAlignment="Top" Width="248" IsEditable="True" SelectionChanged="cmbHosts_SelectionChanged"/>
        <Label Content="User:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <TextBox Name="txtUser" HorizontalAlignment="Left" Height="23" Margin="51,13,0,0" TextWrapping="Wrap" Text="root" VerticalAlignment="Top" Width="92" TextChanged="txtUser_TextChanged"/>
        <Label Content="Private Key:" HorizontalAlignment="Left" Margin="9,39,0,0" VerticalAlignment="Top"/>
        <TextBox Name="txtPrivateKey" HorizontalAlignment="Left" Height="23" Margin="85,42,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="287" TextChanged="txtPrivateKey_TextChanged" IsReadOnly="True"/>
        <Button Name="btnBrowse" Content="Browse" HorizontalAlignment="Left" Margin="377,41,0,0" VerticalAlignment="Top" Width="75" Click="btnBrowse_Click"/>
        <Button Name="cmdStart" Content="Start" HorizontalAlignment="Left" Margin="14,151,0,0" VerticalAlignment="Top" Width="75" IsEnabled="False" Click="cmdStart_Click"/>
        <Button x:Name="cmdStop" Content="Stop" HorizontalAlignment="Left" Margin="94,151,0,0" VerticalAlignment="Top" Width="75" IsEnabled="False" Click="cmdStop_Click"/>
        <TextBox Name="txtSSHCommand" HorizontalAlignment="Left" Height="23" Margin="106,119,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="346" IsEnabled="False"/>
        <Label Content="SSH Command:" HorizontalAlignment="Left" Margin="10,116,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
